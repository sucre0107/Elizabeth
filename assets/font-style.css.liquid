{% assign header_font = settings.header_text_font %}
{% assign body_font = settings.body_text_font %}
{% assign body_font_size = settings.body_text_font_size %}

{{ header_font | font_face }}
{{ body_font | font_face }}

h1,h2,h3,h4,h5,h6,button {
    font-family: {{ header_font.family }},{{ header_font.fallback_families }};
}

body {
    font-family: {{ body_font.family }}, {{ body_font.fallback_families }};
    font-size: {{ body_font_size }}px;
}